
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registrar autor</h2>

<div class="row">
    <div class="col-md-4">
        @Html.AntiForgeryToken()
        <form action="@Url.Action("Create")" method="post" id="formulario-autor">
            <label>Nombre *</label>
            <input type="text" class="form-control" name="nombre" value=""  id="nombre"/>
            <label>Fecha de nacimiento</label>
            <input type="date" class="form-control" name="fecha_nacimiento" value="" id="fecha"/>
            <label>Ciudad de procedencia</label>
            <input type="text" class="form-control" name="ciudad_procedencia" value="" id="ciudad"/>
            <label>Correo *</label>
            <input type="email" class="form-control" name="correo" value=""  style="margin-bottom: 20px" id="correo"/>
            <input type="submit" name="name" value="Guardar autor" class="btn btn-success" />
        </form>
    </div>
</div>

@section scripts{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("formulario-autor").addEventListener('submit', validarFormulario);
        });

        function validarFormulario(evento) {
            evento.preventDefault();
            var nombre = document.getElementById('nombre').value;
            var fecha = document.getElementById('fecha').value;
            var ciudad = document.getElementById('ciudad').value;
            var correo = document.getElementById('correo').value;

            if (nombre.length == 0 || fecha.length == 0 || ciudad.length == 0 || correo.length == 0 ) {
                /*alert('No has escrito nada en el usuario');*/
                swal("Todos los campos con * son obligatorios!", "", "error");
                return;
            }

            this.submit();
        }
    </script>
    }
